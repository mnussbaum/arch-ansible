[Unit]
Description=Lock screen after 10 min idle and sleep after 15 min idle
Documentation=man:swayidle(1) man:swaylock(1)
PartOf=graphical-session.target

[Service]
ExecStart=swayidle -w \
    timeout {{ idle_thresholds["lock_screen_delay_minutes"] * 60 }} 'swaylock' \
    timeout {{ idle_thresholds["suspend_delay_minutes"] * 60 }} 'systemctl suspend-then-hibernate' \
    before-sleep 'swaylock'
Restart=on-failure
RestartSec=1
TimeoutStopSec=10

[Install]
WantedBy=sway-session.target
