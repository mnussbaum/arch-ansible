[
  {
    "layer": "top",
    "position": "top",
    "modules-left": [
  {% for workspace in range(1, window_manager["waybar_minimum_workspace_count"]+1) %}
      "custom/sway-workspaces-{{ workspace }}",
  {% endfor %}
      "sway/mode"
    ],

  {% for workspace in range(1, window_manager["waybar_minimum_workspace_count"]+1) %}
    "custom/sway-workspaces-{{ workspace }}": {
      "exec": "tail --sleep-interval 0.6 -F ~/.cache/waybar-sway-workspace-output-manager/{{ workspace }} 2>/dev/null",
      "on-click": "swaymsg workspace {{ workspace }}",
      "tooltip": false
    },

  {% endfor %}
    "modules-right": [
      "battery",
      "cpu",
      "memory",
      "network",
      "pulseaudio",
      "clock"
    ],

    "battery": {
      "bat": "BAT0",
      "format-charging": "{{ color_scheme_vars | waybar_colored_block('base0E-hex', 'base0E-hex', '{capacity}% ÔÉß', first_block=True, position='right')  }}",
      "format": "{{ color_scheme_vars | waybar_colored_block('base0E-hex', 'base0E-hex', '{capacity}% {icon}', first_block=True, position='right')  }}",
      "format-icons": [
	"ÔâÑ",
	"ÔâÉ",
	"ÔâÇ",
	"ÔâÅ",
	"ÔâÄ"
      ],
      "states": {
	"warning": 20,
	"critical": 10
      },
      "tooltip": false
    },

    "cpu": {
      "format": "{{ color_scheme_vars | waybar_colored_block('base0E-hex', 'base0D-hex', '{usage}% Ôãõ') }}",
      "tooltip": false
    },

    "memory": {
      "format": "{{ color_scheme_vars | waybar_colored_block('base0D-hex', 'base0C-hex', '{}% ÔÉâ') }}",
      "tooltip": false
    },

    "network": {
      "format-wifi": "{{ color_scheme_vars | waybar_colored_block('base0C-hex', 'base0B-hex', '{essid} {signalStrength}% Ôá´') }}",
      "format-ethernet": "{{ color_scheme_vars | waybar_colored_block('base0C-hex', 'base0B-hex', '{ifname} ÔÉÅ') }}",
      "format-disconnected": "{{ color_scheme_vars | waybar_colored_block('base0C-hex', 'base0B-hex', 'Disconnected ‚ö†') }}",
      "tooltip": false
    },

    "pulseaudio": {
      "format": "{{ color_scheme_vars | waybar_colored_block('base0B-hex', 'base0A-hex', '{volume}% ÔÄ¶') }}",
      "format-muted": "{{ color_scheme_vars | waybar_colored_block('base0B-hex', 'base0A-hex', '0% ÔÄ¶') }}",
      "on-click": "pavucontrol",
      "tooltip": false
    },

    "clock": {
      "format-alt": "{{ color_scheme_vars | waybar_colored_block('base0A-hex', 'base09-hex', '{:%a, %d %b %I:%M:%S}', last_block=True, position='right') }}",
      "format": "{{ color_scheme_vars | waybar_colored_block('base0A-hex', 'base09-hex', '{:%I:%M}', last_block=True, position='right') }}",
      "tooltip": false
    }
  },
  {
    "layer": "top",
    "position": "bottom",
    "modules-left": [
      "idle_inhibitor",
      "custom/rotation-toggle",
      "custom/virtual-keyboard-toggle"
    ],

    "modules-right": [],

    "idle_inhibitor": {
      "format": "{{ color_scheme_vars | waybar_colored_block('base0E-hex', 'base0E-hex', '{icon}', first_block=True, position='left') }}",
      "format-icons": {
	"activated": "‚òï",
	"deactivated": "üí§"
      },
      "tooltip": false
    },

    "custom/rotation-toggle": {
      "exec": "rot8-rotation-lock-status",
      "format": "{{ color_scheme_vars | waybar_colored_block('base0E-hex', 'base0D-hex', '{}') }}",
      "interval": 1,
      "on-click": "toggle-rot8",
      "tooltip": false
    },

    "custom/virtual-keyboard-toggle": {
      "exec": "virtboard-open-status",
      "format": "{{ color_scheme_vars | waybar_colored_block('base0D-hex', 'base0C-hex', '{}', last_block=True, position='left') }}",
      "tooltip": false,
      "interval": 1,
      "on-click": "toggle-virtboard",
      "tooltip": false
    }
  }
]
