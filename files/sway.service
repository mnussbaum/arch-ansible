[Unit]
Description=Run sway
Documentation=man:sway(5)
PartOf=wayland-session.target
Before=graphical-session-delay.service
Wants=graphical-session-delay.service

[Service]
EnvironmentFile=/etc/wayland-env
ExecStart=/usr/bin/sway
Restart=on-failure
RestartSec=1
TimeoutStopSec=10

[Install]
WantedBy=wayland-session.target
