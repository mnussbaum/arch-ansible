#! /bin/bash

set -o errexit
set -o nounset

if [[ "${1:-}" == "--help" ]] || [[ "${1:-}" == "-h" ]] ; then
  echo 'Run ansible in an arch ISO on a physical machine to rebuild the boot partition. Requires $HOSTNAME to be set' >&2
  exit
else
  set -o xtrace
fi

NO_ASK_BECOME_PASS=1 \
ANSIBLE_PLAYBOOK=bootstrap.yml \
  exec ./bin/ansible \
  -e bootstrap="true" \
  --tags rebuild-boot-parition \
  $@
