#! /bin/bash

set -o errexit
set -o nounset

if [[ "${1:-}" == "--help" ]] || [[ "${1:-}" == "-h" ]] ; then
  echo "Run ansible in an arch ISO on tecopa to rebuild the boot partition" >&2
  exit
else
  set -o xtrace
fi

NO_ASK_BECOME_PASS=1 \
ANSIBLE_PLAYBOOK=bootstrap.yml \
  exec ./bin/ansible \
  --limit tecopa \
  -e bootstrap="true" \
  --tags bootstrap,rebuild-boot-parition \
  $@
